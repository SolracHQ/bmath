{
  "comments": {
    "lineComment": "#",
    "blockComment": ["/**", "*/"],
    "folding": true
  },
  "brackets": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"]
  ],
  "autoClosingBrackets": "languageDefined",
  "surroundingPairs": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["\"", "\""],
    ["'", "'"]
  ],
  "indentationRules": {
    "increaseIndentPattern": "^.*[\\{\\[][^\\}\\]]*$",
    "decreaseIndentPattern": "^.*[\\}\\]].*$"
  }
}